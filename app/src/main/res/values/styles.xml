<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black_alpha80</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/blue500</item>
        <item name="colorError">@color/red500</item>
        <item name="skin_startColor">@color/jazz_ed</item>

    </style>

    <style name="TextViewStyle" parent="">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle2
        </item>
        <item name="android:textColor">@color/blue500</item>
        <item name="colorError">@color/red500</item>
    </style>


    <style name="ButtonStyle" parent="">
        <item name="buttonStyle">?attr/materialButtonOutlinedStyle</item>
    </style>

</resources>