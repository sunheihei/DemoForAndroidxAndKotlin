<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black_alpha80</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/blue500</item>
        <item name="colorError">@color/red500</item>
    </style>

    <style name="TextViewStyle" parent="">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/blue500</item>
        <item name="colorError">@color/red500</item>
    </style>

</resources>